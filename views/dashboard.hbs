<form action="/search" method="GET">
<label for="search">Pesquisar placa</label>
<input type="text" name="search" placeholder="AAA-0000">
<button id="search">Pesquisar</button> <br>
</form>
<ul>
    <li><a href="/cars/{{response._id}}">{{response.plate}}</a></li>
</ul>

<ul>
    <li>{{response.plate}}
        <p>{{response.status}}</p>
        <p>{{response.brand}} / {{response.model}}</p>
        <p>{{response.year}} / {{response.color}}</p>
        <p>{{response.city}} / {{response.state}}</p>
    </li>
</ul>

{{#if message }}
    <div class="error-message">{{message}}</div>
{{/if}}


