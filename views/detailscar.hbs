<section id="page-title-area" class="section-padding overlay">
        <div class="container">
            <div class="row">
               
                <div class="col-lg-12">
                    <div class="section-title  text-center">
                        {{#with car}}
                        <h2>CARRO: {{plate}}</h2>
                        {{/with}}
                        <span class="title-line"><i class="fa fa-car"></i></span>
                    </div>
                </div>
                
            </div>
        </div>
</section>
  
<section id="car-list-area" class="section-padding">
        <div class="container">
            <div class="row">
               
                <div class="col-lg-8">
                    <div class="car-details-content">
                        {{#with car}}
                        <h2>{{plate}} 
                            {{#compare status "Sem registro ou alerta de roubo" operator='==='}}
                            <span class="price"><b>{{status}}</b></span>
                            {{/compare}}

                            {{#compare status "Roubado" operator='==='}}
                            <span class="price" style="background-color: #Dd5b21;"> <b>{{status}}</b></span>
                            {{/compare}}
                        </h2>   


                        <div class="car-preview-crousel">
                            <div class="single-car-preview">
                                <img src="{{path}}" alt="Car">
                                 {{/with}}
                            </div>
                        </div>
                        <div class="car-details-info">
                             {{#with car}}
                            <h4>Informações Adicionais</h4>
                            <p>{{details}}</p>

                            <div class="technical-info">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="tech-info-table">
                                            <table class="table table-bordered">
                                                <tr>
                                                    <th>MODELO</th>
                                                    <td>{{model}}</td>
                                                </tr>
                                                <tr>
                                                    <th>MARCA</th>
                                                    <td>{{brand}}</td>
                                                </tr>
                                                <tr>
                                                    <th>COR</th>
                                                    <td>{{color}}</td>
                                                </tr>
                                                <tr>
                                                    <th>CIDADE</th>
                                                    <td>{{city}}</td>
                                                </tr>
                                                <tr>
                                                    <th>ESTADO</th>
                                                    <td>{{state}}</td>
                                                </tr>
                                                <tr>
                                                    <th>ANO</th>
                                                    <td>{{year}}</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        
                         {{/with}}
                        </div>
                    </div>
                </div>
              
                <div class="col-lg-4">
                    <div class="sidebar-content-wrap m-t-50">
                        
                        <div class="single-sidebar">
                            <a href="/dashboard"><h3>VOLTE PARA O SEU PERFIL</h3></a>
                        </div>
                       

                       
                        <div class="single-sidebar">
                            <a href="/cars-edit/{{car._id}}"><h3>EDITAR CARRO</h3></a>
                        </div>
                       
                    </div>
                </div>
                
            </div>
        </div>
</section>
